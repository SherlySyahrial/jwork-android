            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/job_category" />

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:textSize="12sp" android:textColor="@color/black" android:text="Job Fee" android:id="@+id/staticFee" app:layout_constraintTop_toBottomOf="@id/staticCategory" android:layout_marginTop="10dp"/>

