        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:textSize="12sp" android:textColor="@color/black" android:text="Job Name" android:id="@+id/staticJobName" app:layout_constraintTop_toBottomOf="@id/pesanan" android:layout_marginTop="15dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:textSize="12sp" android:textColor="@color/black" android:text="TextView" android:id="@+id/job_name" app:layout_constraintTop_toBottomOf="@id/pesanan" android:layout_marginTop="15dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:textSize="12sp" android:textColor="@color/black" android:text="Job Category" android:id="@+id/staticCategory" app:layout_constraintTop_toBottomOf="@id/staticJobName" android:layout_marginTop="10dp"/>

